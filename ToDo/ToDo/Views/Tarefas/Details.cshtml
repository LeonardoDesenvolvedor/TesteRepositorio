@model ToDo.Models.Tarefa

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detalhes</title>
</head>
<body>

<div>
    <h4>Tarefa</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndData)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndData, "{0:d MMM yyy}", new {@disable="true"})
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
    <a class="btn-outline-primary brn-sm" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a class="btn-secundary text-white btn-sm" asp-action="Index">Retornar a Lista</a>
</div>
</body>
</html>
