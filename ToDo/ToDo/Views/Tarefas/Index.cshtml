@model IEnumerable<ToDo.Models.Tarefa>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndData)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            @foreach(var item in Model)
            {
             <tr>
                 <td>
                      @item.Name
                </td>   
             <td>
                 @item.EndData.ToString("dd MMM yyy")
             </td>
                <td>
                    @if (item.Status)
                    {
                        <span class="badge bg-success text-white">Realizado</span>
                    }
                    else if (DateTime.Now < item.EndData)
                    {
                        <span class="badge bg-primary text-white">Executar</span>
                    }
                    else
                    {
                        <span class="badge bg-danger text-white">Atrasado</span>
                    }
             </td>
    
            <td>
                <a class="btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a class="btn-outline-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a class="btn btn-danger text-white btn-sm" asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
